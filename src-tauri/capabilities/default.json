{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file-lines",
    "fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}
